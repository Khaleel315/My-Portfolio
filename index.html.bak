    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #D3D3D3; /* Light grey */
            --text-color: #e5e7eb; /* Light gray */
            --bg-color: #0f172a; /* Dark slate blue */
            --card-bg: #1e293b; /* Blue-gray */
            --shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            --hover-color: #3b82f6; /* Bright blue */
        }

        body {
            background: var(--bg-color) url('wall1.jpg') no-repeat center center fixed;
    background-size: cover;
            color: var(--text-color);
            line-height: 1.6;
            transition: all 0.3s ease;
            font-family: 'Open Sans', sans-serif; /* Body font */
        }

        h1, h2, h3 {
            font-family: 'Montserrat', sans-serif; /* Heading font */
            font-weight: 700;
        }

        .light-mode {
            --primary-color: #1e3a8a;
            --text-color: #1f2937;
            --bg-color: #f1f5f9;
            --card-bg: #ffffff;
            --hover-color: #2563eb;
        }

        nav {
            position: fixed;
            width: 100%;
            padding: 1.5rem 2rem;
            background: rgba(30, 41, 59, 0.9);
            backdrop-filter: blur(10px);
            z-index: 1000;
        }

        nav ul {
            display: flex;
            justify-content: flex-end;
            list-style: none;
        }

        nav a {
            color: var(--text-color);
            text-decoration: none;
            margin: 0 1.5rem;
            font-size: 1.2rem; /* Larger nav font */
            transition: color 0.3s ease;
        }

        nav a:hover {
            color: var(--hover-color);
        }

        section {
            padding: 6rem 2rem;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
        }

        #home {
            text-align: center;
        }

        #home h1 {
            font-size: 4.5rem; /* Extra large for impact */
            color: var(--primary-color);
            animation: fadeInUp 1s ease;
            letter-spacing: 2px;
        }

        #home .tagline {
            font-size: 2rem; /* Larger tagline */
            margin: 1.5rem 0;
            animation: fadeInUp 1s ease 0.2s;
            animation-fill-mode: both;
            font-family: 'Montserrat', sans-serif;
        }

        #home p {
            font-size: 1.2rem;
        }

        h2 {
            font-size: 3rem; /* Large section headings */
            margin-bottom: 2rem;
            color: var(--primary-color);
        }

        #about .skills {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .skill-card {
            background: var(--card-bg);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: var(--shadow);
            transform: translateY(20px);
            opacity: 0;
            transition: all 0.5s ease;
        }

        .skill-card h3 {
            font-size: 1.8rem; /* Larger skill titles */
        }

        .skill-card p {
            font-size: 1.1rem;
        }

        .skill-card:hover {
            transform: translateY(0);
            border: 1px solid var(--hover-color);
        }

        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .project-card {
            background: var(--card-bg);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: transform 0.3s ease;
        }

        .project-card:hover {
            transform: translateY(-10px);
            border: 1px solid var(--hover-color);
        }

        .project-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .project-info {
            padding: 1.5rem;
        }

        .project-info h3 {
            font-size: 1.6rem; /* Larger project titles */
        }

        #contact form {
            max-width: 600px;
            margin: 2rem auto;
            display: grid;
            gap: 1rem;
        }

        input, textarea {
            padding: 1.2rem;
            border: none;
            border-radius: 5px;
            background: var(--card-bg);
            color: var(--text-color);
            font-size: 1.1rem;
        }

        button {
            padding: 1.2rem;
            background: var(--primary-color);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 1.2rem;
            font-family: 'Montserrat', sans-serif;
        }

        button:hover {
            transform: scale(1.05);
            background: var(--hover-color);
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
		
	.hero-image img {
